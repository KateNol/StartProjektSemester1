script/source = "extends KinematicBody2D

const move_speed : float = 32 * 2 / .8 
const jump_speed : int = -400
const gravity : int = 1600
const up_vector = Vector2(0, -1)

var direction = Vector2(move_speed, 0)
var velocity = Vector2(0, 1)  

var jump_x = 0

var is_alive = true # Überprüft ob der Gegner noch am leben ist



func _ready():
	pass


func _physics_process(delta):
	if is_alive == false:
		return
		
	direction.y += gravity * delta #Das er durch die Gravität auf dem Boden ist
	
	move_and_slide_with_snap(direction, velocity, up_vector) #Laufrichtung
	
	if is_on_floor():
		if $AnimatedSprite.animation == \"jump\":
			on_landing()
		else:
			direction.y = 0
			if is_on_wall():
				jump()

# Spring über ein Hindernis
func jump():
	$AnimatedSprite.play(\"jump\")
	direction.y = jump_speed
	jump_x = floor(position.x)

# Was er nach dem Sprung tut
func on_landing():
	$AnimatedSprite.play(\"run\")
	if floor(position.x) == jump_x:
		turn()

# Wenn er gegen eine Wand läuft dreht er um
func turn():
	if is_on_wall():
		direction.x *= -1
		$AnimatedSprite.flip_h = !$AnimatedSprite.flip_h

# Gegner stirbt
func on_stomp():
	$AnimatedSprite.play(\"dead\")
	is_alive = false
	
# Entfernt Gegner beim sterben
func animation_finished():
	if $AnimatedSprite.animation == \"dead\":
		queue_free()
"

